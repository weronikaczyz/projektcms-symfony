{% extends 'base.html.twig' %}

{% block title %}
    Page | {{ page.title }}
{% endblock %}

{% block body %}
    <section class="section">
        <h1 class="title">
            {{ page.title }}
        </h1>
        <h2 class="subtitle">{{ page.author.name }} | {{ page.createdAt|date('d/m/Y') }}</h2>
    </section>
    {% if page.file is defined %}
    <section class="section">
        <figure class="image">
            <img src="{{ asset('uploads/photos/' ~ page.file) }}" alt="{{ page.file }}">
        </figure>
    </section>
    {% endif %}
    <section class="section">
        <p>{{ page.content }}</p>
    </section>
{% endblock %}
