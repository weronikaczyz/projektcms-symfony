<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.4/css/bulma.min.css">
            {# <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet"/> #}
            {# <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"> #}
            {# <link href="{{ asset('css/your_form_theme.css') }}" rel="stylesheet"/> #}
        {% endblock %}
    </head>
    <body>
        {% include 'default/_flash_messages.html.twig' %}

        <div class="columns">
            <aside class="column is-2 aside hero is-fullheight has-background-light">
                <div>
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <p class="menu-label">Hello, {{ app.user.name }}</p>
                        <ul class="menu-list">
                            <li>
                                <a href="{{ url('security_logout') }}">
                                    <i class="fas fa-sign-out-alt"></i>
                                    {{ 'action.logout'|trans }}
                                </a>
                            </li>
                        </ul>
                    {% else %}
                        <p class="menu-label">Hello, Anonymous</p>
                        <ul class="menu-list">
                            <li>
                                <a href="{{ url('security_login') }}">
                                    <i class="fas fa-sign-in-alt"></i> {{ 'action.login'|trans }}
                                </a>
                            </li>
                        </ul>
                    {% endif %}
                </div>
            </aside>
            <main class="column">
                {% block body %}{% endblock %}
            </main>
        </div>
        <div class="columns">
            <footer class="footer column has-background-dark">
                <div class="content has-text-centered">
                    <p class="has-text-white">
                        <strong class="has-text-white">CMS System</strong> by <a href="mailto://vieraczyz@gmail.com">Weronika Czyz</a>. The source code is licensed
                        <a href="http://opensource.org/licenses/mit-license.php">MIT</a>.
                    </p>
                </div>
            </footer>
        </div>

        {% block javascripts %}
            {# <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script> #}
            <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
        {% endblock %}
    </body>
</html>
