<aside class="column is-2 aside hero is-fullheight has-background-light menu">
    <div class="menu">
        <p class="menu-label column">
            {{ 'label.main_menu'|trans }}
        </p>
        <ul class="menu-list">
            {% for item in mainMenuItems %}
                <li>
                    <a href="{{ url('page_view', {id: item.id}) }}">
                        {{ item.title }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
</aside>
